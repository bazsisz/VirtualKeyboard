<UserControl x:Class="VirtualKeyboard.VirtualKeyboardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VirtualKeyboard"
             xmlns:IconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="65" d:DesignWidth="65">
    <DockPanel>
        <Button VerticalContentAlignment="Center"
                HorizontalContentAlignment="Center"
                Margin="10"
                DockPanel.Dock="Right"
                Click="EditTextButton_Click">
            <Button.Content>
                <IconPacks:PackIconFontAwesome Kind="EditSolid"
                                               Height="25"
                                               Width="25"/>
            </Button.Content>
        </Button>
    </DockPanel>
    <!--</Grid>-->
</UserControl>
